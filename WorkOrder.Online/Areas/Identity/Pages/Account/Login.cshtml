@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<style>
   
/*.login .login__input {
     min-width: 95%; 
}*/
</style>
<body class="login">
    <div class="container sm:px-10">
        <div class="block xl:grid grid-cols-2 gap-4">
            <!-- BEGIN: Login Info -->
            <div class="hidden xl:flex flex-col min-h-screen">
                <a href="" class="-intro-x flex items-center pt-5">
                    <img alt="Midone - HTML Admin Template" class="w-6" src="~/Theme/dist/images/logo.svg">
                    <span class="text-white text-lg ml-3"> Work Order Online </span>
                </a>
                <div class="my-auto">
                    <img alt="WorkOrder.Online Login" class="-intro-x w-1/2 -mt-16" src="~/Theme/dist/images/illustration.svg">
                    <div class="-intro-x text-white font-medium text-4xl leading-tight mt-10">
                         @Html.Raw(Model.Input.Translation.Message1)
                    </div>
                    <div class="-intro-x mt-5 text-lg text-white text-opacity-70 dark:text-slate-400"> @Model.Input.Translation.Message2</div>
                </div>
            </div>
            <!-- END: Login Info -->
            <!-- BEGIN: Login Form -->
            <div class="h-screen xl:h-auto flex py-5 xl:py-0 my-10 xl:my-0">

                <div class="my-auto mx-auto xl:ml-20 bg-white dark:bg-darkmode-600 xl:bg-transparent px-5 sm:px-8 py-8 xl:p-0 rounded-md shadow-md xl:shadow-none w-full sm:w-3/4 lg:w-2/4 xl:w-auto">
                    <h2 class="intro-x font-bold text-2xl xl:text-3xl text-center xl:text-left">
                        @Model.Input.Translation.Message
                    </h2>
                    <div class="intro-x mt-2 text-slate-400 xl:hidden text-center"> @Html.Raw(Model.Input.Translation.Message1) <br /> @Model.Input.Translation.Message2</div>
                    <form id="login-form" method="post">
                        <div class="intro-x mt-8">
                            <div class="input-group">
                                <input asp-for="Input.Email" type="email" class="intro-x login__input form-control py-3 px-4 block" placeholder="@Model.Input.Translation.Email">
                                <span class="input-group-text" id="basic-addon2"> <i class="fas fa-envelope fa-lg mt-2"></i></span>
                            </div>
                            <div class="input-group">
                                <input asp-for="Input.Password" type="password" class="intro-x login__input form-control py-3 px-4 block mt-4" placeholder="@Model.Input.Translation.Password">
                                <span class="input-group-text mt-4" id="basic-addon2"> <i class="fas fa-lock fa-lg mt-2"></i></span>
                            </div>
                        </div>
                        <div class="intro-x flex text-slate-600 dark:text-slate-500 text-xs sm:text-sm mt-4">
                            <div class="flex items-center mr-auto">
                                <input id="remember-me" asp-for="Input.RememberMe" type="checkbox" class="form-check-input border mr-2">
                                <label for="remember" class="cursor-pointer select-none">@Model.Input.Translation.RememberMe</label>
                                @*<input id="remember-me" type="checkbox" class="form-check-input border mr-2">
                                <label class="cursor-pointer select-none" for="remember-me">Remember me</label>*@
                            </div>
                            @*<a href="">Forgot Password?</a>*@
                        </div>
                        <div class="intro-x mt-5 xl:mt-8 text-center xl:text-left">
                            <button id="btnConnect" type="submit" class="btn btn-primary py-3 px-4 w-full xl:w-32 xl:mr-3 align-top">@Model.Input.Translation.ConnectButton</button>
                            @*<button class="btn btn-outline-secondary py-3 px-4 w-full xl:w-32 mt-3 xl:mt-0 align-top">Register</button>*@
                        </div>
                    </form>
                    @* <div class="intro-x mt-10 xl:mt-24 text-slate-600 dark:text-slate-500 text-center xl:text-left"> By signin up, you agree to our <a class="text-primary dark:text-slate-200" href="">Terms and Conditions</a> & <a class="text-primary dark:text-slate-200" href="">Privacy Policy</a> </div>*@
                </div>

            </div>
            <!-- END: Login Form -->
        </div>
    </div>

    <!-- BEGIN: JS Assets-->
    @section Scripts {
        <script src="~/js/login.js"></script>
    }
        <!-- END: JS Assets-->
    </body>
